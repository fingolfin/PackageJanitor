#!/bin/bash

set -e

{% if is_meta_package %}
packages="{% for subpackage in subpackages %}{{ subpackage.name }} {% endfor %}"

base_dir="$PWD"

for pkg in ${packages}; do
  ./release-gap-package --skip-existing-release --srcdir ${base_dir}/${pkg} --webdir ${base_dir}/gh-pages/${pkg} --update-file ${base_dir}/gh-pages/update.g $@
done
{% else %}
./release-gap-package --skip-existing-release $@
{% endif %}
