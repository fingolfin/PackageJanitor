[codecov-img]: https://codecov.io/gh/homalg-project/{{ meta_package.name }}/branch/master/graph/badge.svg
[codecov-url]: https://codecov.io/gh/homalg-project/{{ meta_package.name }}
{% else %}
[tests-img]: https://github.com/homalg-project/{{ package.name }}/workflows/Tests/badge.svg?branch=master
[tests-url]: https://github.com/homalg-project/{{ package.name }}/actions?query=workflow%3ATests+branch%3Amaster

[codecov-img]: https://codecov.io/gh/homalg-project/{{ package.name }}/branch/master/graph/badge.svg
[codecov-url]: https://codecov.io/gh/homalg-project/{{ package.name }}
{% endif -%}
